<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bcg"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="844dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/wcText"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Welcome to"
            android:textColor="#ffff"
            android:textSize="45sp"/>

        <TextView
            android:id="@+id/wcText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Pookies!"
            android:textColor="#ffff"
            android:textSize="45sp" />

        <ImageView
            android:id="@+id/logopink"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/pink_logo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/wcText3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Your new buddy, always by your side!"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="349dp"
            android:layout_height="240dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/lgBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                app:backgroundTint="#0909af"
                app:cornerRadius="40dp"
                app:strokeColor="@color/white"
                android:elevation="@dimen/cardview_compat_inset_shadow"
                app:strokeWidth="1dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="I have an Account"
                android:textStyle="bold"
                android:textColor="@color/salmon"
                android:textSize="20sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rgBtn"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                app:backgroundTint="#0909af"
                app:cornerRadius="40dp"
                app:strokeColor="@color/white"
                app:strokeWidth="1dp"
                android:fontFamily="@font/montserrat_medium"
                android:text="I don't have an Account"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Created by Pookies On Prayerâ„¢"
                android:textColor="@color/blue_dark" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
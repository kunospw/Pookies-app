<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color -->
    <solid android:color="#ffd1c7" />

    <!-- Set the corners radius for rounding -->
    <corners android:radius="30dp" />

    <!-- Optional: Set padding -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />

    <!-- Optional: Add a border -->
    <stroke
        android:width="5dp"
        android:color="#ff978c" /> <!-- Border color (optional) -->
</shape>

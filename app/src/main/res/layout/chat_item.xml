<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Left Chat View (Bot Messages) -->
    <LinearLayout
        android:id="@+id/left_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="80dp"
        android:orientation="vertical">

        <!-- Bot Logo -->

        <!-- Dynamically Shown Image for Bot -->
        <ImageView
            android:id="@+id/left_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Text Message Container -->
        <LinearLayout
            android:id="@+id/left_chat_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#45241B"
            android:padding="8dp"
            android:orientation="vertical"
            android:maxWidth="250dp">

            <TextView
                android:id="@+id/left_chat_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

        <!-- Optional Caption for Bot Image -->
        <LinearLayout
            android:id="@+id/left_caption_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="vertical"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#45241B"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/left_caption_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageView
            android:id="@+id/bot_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_edittext"
            android:scaleType="centerCrop"
            android:src="@drawable/pink_logo" />
    </LinearLayout>

    <!-- Right Chat View (User Messages) -->
    <LinearLayout
        android:id="@+id/right_chat_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:orientation="vertical">

        <!-- Dynamically Shown Image for User -->
        <ImageView
            android:id="@+id/right_image_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="50dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Optional Caption for User Image -->
        <TextView
            android:id="@+id/right_caption_text_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="50dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:visibility="gone" />

        <!-- Text Message Container -->
        <LinearLayout
            android:id="@+id/right_chat_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="#CE8875"
            android:padding="8dp"
            android:orientation="vertical"
            android:maxWidth="250dp">

            <TextView
                android:id="@+id/right_chat_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- User Profile Image (Aligned to Far Right) -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/person"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_edittext" />
    </LinearLayout>
</RelativeLayout>
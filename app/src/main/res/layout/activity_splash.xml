<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_blue">


    <LinearLayout
        android:layout_width="408dp"
        android:layout_height="500dp"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="181dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logopink"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/pink_logo"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/Pookies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Pookies!"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/Yolove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Your lovely little buddy!"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/Loading_vw"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="220dp"
            android:rotation="0"
            android:src="@drawable/pink_loading"
            android:layout_gravity="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
